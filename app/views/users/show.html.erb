<% provide(:title, @user.name) %>

<!-- USER INFO -->

  <div class="col-md-5">
        <!--<%= gravatar_for @user %>-->
        <h1><strong><%= @user.name %></strong></h1>
          <h3><small><%= @user.email %>     | <span id="user-role">  <strong><%= @user.role %></strong> </small></h3> 
          <h6><small>User Updated:<span id="updated-at"> <%= time_ago_in_words(@user.updated_at) %> ago</span></small></h6>
          </span>

<hr>
  <p><button type="button" class="btn btn-default btn-xs"><%= link_to "Make Admin", make_admin_user_path(@user), method: :patch, remote: true %></button>
  <button type="button" class="btn btn-default btn-xs"><%= link_to "Edit User", edit_user_path(@user) %></button>
           
    </p>
    </section>

          <hr>
<!---->
<!-- USERS WITHOUT A PROFILE -->
<% if @user.profile == nil %>

        <h3><strong>No Profile Assigned. Please set profile. </strong></h3>
        <button type="button" class="btn btn-primary btn-lg"><%= link_to "Set your profile", edit_user_path(@user) %></button>
<% end %>


<!---->
<!-- USER PROFILE INFO -->

<% if !@user.employee? && @user.profile? %>

        <h3><%= link_to @profile.name, @profile %></h3>

<!--COMPANY INFO -->

<% if @user.company? %>
<%= render 'company_info' %>
<% end %>
<!---->

<!--AGENCY INFO -->
<% if @user.agency? %>
<%= render 'agency_info' %>
<% end %>
<!---->
  

    <span id="agency-info">Number of Job Orders: <%= @user.profile.job_orders.count %></span>
    <span id="agency-info">Number of Assignments: <%= @user.profile.assignments.count %></span>
  
  <% if !@user.employee? && @profile.users.any?  %>
  <div class="col-md-4">
    <h3> Users </h3>
    
      <% @profile.users.each do |user| %>
      <ul>
      <%= render partial: 'users/user', collection: @profile.users, locals: {user: user} %>
    </ul>
      <% end %>
      
    <% end %>
  </div>

<% end %>


</div>

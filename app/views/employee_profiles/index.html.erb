
<div class="col-md-10">
  <div class="search">
    <h3>All Employees </h3>
    <%= search_form_for @q do |f| %>
    <%= f.search_field :employee_name_or_ssn_cont, placeholder: "Search by name or SSN", class: "form-control" %>

  <% end %>
  </div>




<% if @employee_profiles.any? %>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= sort_link(@q, :employee_name, 'Employee Name') %></th>
      <th>Email</th>
      <th>SSN #</th>
      <th>Marital Status</th>
      <th>Created</th>

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_profiles.each do |employee| %>
    <% if employee.user %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= link_to employee.employee_name, employee %></td>
        <td><%= employee.user.email %></td>
        <td><%= employee.ssn %></td>
        <td><%= employee.marital_status %></td>
        <td><%= time_ago_in_words(employee.created_at) %></td>

        <td><%= link_to 'Edit', edit_employee_profile_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% else %>
No Employee Profiles.
<% end %>


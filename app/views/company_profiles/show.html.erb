<% if @profile == @company_profile %>
<h1>This is your company profile!</h1>This is your company profile!
<% end %>
<div class="col-md-4"><h3><%= @company_profile.company_name %></h3>
  <div class="panel panel-default">
     <strong><%= @company_profile.company_name %></strong>
     <%= time_ago_in_words(@company_profile.created_at) %><br>
      Number of Timesheets: <%= @company_profile.timesheets.count %>
            <div class="panel-body">
                <% if @company_profile.company_admin %>
                <p>Company Admin: <%= link_to @company_profile.company_admin.name, @company_profile.company_admin %> | Admin ID: <%= @company_profile.company_admin.id %></p>
                <p>Company Email: <%= @company_profile.company_admin.email %></p>
                <% else %>
                <p> No Company Admin has been assigned </p>
                <% end %>
            </div>
          </div>
        </div>




  <div class="btn-group">
    <% @job_orders.each do |job_order| %>
    <button class="btn btn-link" data-toggle="modal" data-target="#job-order-<%= job_order.id %>-description">
   <%= job_order.job_title %>
  </button>
    <%= render partial: 'shared/jo_modal', locals: {job_order: job_order} %>
    <% end %>
  </ul>
</div>

<hr>
</div>


    


          <h4><%= @company_profile.name %>'s Users</h4>
         </div>
        <div class="panel-body">
            <ul class="list-group">
              <% @company_profile.users.each do |user| %>
                  <li><%= user.name %> | <%= user.role %></li>
              <% end %>
            </ul>
        </div>
      </div>

    
    
    
    
    

<div class="col-md-4">
  <div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default"><a><%= link_to "New Job Order", new_company_profile_job_order_path(@company_profile) %>   </a></button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default"><a><%= link_to "Current Job Orders", company_profile_job_orders_path(@company_profile) %> </a>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default">Inactive Job Orders</button>
  </div>
</div>
</div>        
        






<h2 class="sub-header">All Companies</h2>


<div class="pull-left">
  <%= search_form_for @q, html: { class: "form-inline" } do |f| %>
    <%= f.search_field :company_name_cont, placeholder: "Search...", class: "form-control" %>

  <% end %>
</div>


<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Current Balance</th>
      <th>Created</th>
    

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @company_profiles.each do |company| %>
    <% if company.user != nil %>
      <tr>
        <td><%= link_to company.company_name, company %></td>
        <td><%= company.balance %></td>
        <td><%= time_ago_in_words(company.created_at) %></td>
        
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_profile_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% else %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.id %></td>
        <td> NO ADMIN USER ASSIGNED </td>
        <td><%= time_ago_in_words(company.created_at) %></td>
        
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_profile_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  <% end %>
 
  </tbody>
</table>
</div>


<% if job_order.needs_attention? %>

    <%= content_tag_for(:li, job_order, class: "list-group-item list-group-item-danger" ) do %>
        <strong>Job Title: <%= link_to job_order.job_title, company_profile_job_order_path(job_order.company_profile, job_order) %> | Current Status: <%= job_order.state %></strong>
        <%= job_order.needed %> |  <%= job_order.assignments.count %><p><%= job_order.needs_attention? %> |  <%= job_order.asap? %></p>
    <% end %>    

<% end %>
<% if !job_order.needs_attention? %>

    <%= content_tag_for(:li, job_order, class: "list-group-item" ) do %>
        <strong>Job Title: <%= link_to job_order.job_title, company_profile_job_order_path(job_order.company_profile, job_order) %> | Current Status: <%= job_order.state %></strong>
        <%= job_order.needed %> |  <%= job_order.assignments.count %><p><%= job_order.needs_attention? %> |  <%= job_order.asap? %></p>
    <% end %> 

<% end %>


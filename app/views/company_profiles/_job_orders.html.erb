
<% if @job_orders.any? %>
<table id="job-orders-table" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Job title</th>
      <th>Job Description</th>
      <th>Fill date</th>
      <th>People Needed</th>
      <th>Current Assignments</th>
      <th>Needs Attention?</th>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @job_orders.each do |job_order| %>
      <tr>
        <td><%= link_to job_order.job_title, job_order %></td>
        <td><%= job_order.job_description %></td>
        <td><%= job_order.fill_date %></td>
        <td><%= job_order.needed %></td>
        <td><%= job_order.assignments.count %></td>
        <td><%= job_order.needs_attention? %></td>
        
        <td><%= link_to 'Edit', edit_job_order_path(job_order) if can? :update, job_order %></td>
        <td><%= link_to 'Destroy', job_order, method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, job_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
No Job Orders.
<% end %>
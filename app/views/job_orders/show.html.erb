<p id="notice"><%= notice %></p>

<p>
  <strong>Job title:</strong>
  <%= @job_order.job_title %>
</p>

<p>
  <strong>Company profile:</strong>
  <%= @job_order.company_profile.name %>
</p>

<p>
  <strong>Fill date:</strong>
  <%= @job_order.fill_date.strftime("%B %e, %Y ") %>
</p>
    
<a>Employees on current job order <span class="badge"><%= @job_order.assignments.count %></span></a>
<hr>
<strong>Employees assgined to this job order</strong>
<br>
<ul>
<% if @job_order.assignments != nil %>
  <% @assignments.each do |assignment| %>
  <% if assignment.employee_profile != nil %>
  <div class="assignment">
    <li> Employee: <%= assignment.employee_profile.user.name %> | Pay: <%= assignment.pay_rate %> | Bill: <%= assignment.bill_rate %> </li>
    <small>Assigned: <%= assignment.created_at.strftime("%B %e, %Y ") %></small>
    
    
  <% else %>
    <p>No employee assigned</p>
  <% end %>
  </div>
  <hr>
  <% end %>
<% end %>
</ul>

<%= link_to 'Edit', edit_company_profile_job_order_path(@job_order.company_profile, @job_order) %> |
<%= link_to 'Back', company_profile_job_orders_path %>

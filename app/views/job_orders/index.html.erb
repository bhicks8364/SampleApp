<h1>Listing job_orders</h1>
<% if @job_orders.any? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Job title</th>
      <th>Job_description</th>
      <th>Fill date</th>
      <th>Status</th>
      <th>Number of Employees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_orders.each do |job_order| %>
      <tr>
        <td><%= job_order.job_title %></td>
        <td><%= job_order.job_description %></td>
        <td><%= job_order.fill_date %></td>
        <% if job_order.assignments.any? %>
        <td>Assigned!</td>
        <td><%= job_order.assignments.count %></td>
        <% else %>
        <td> Unassigned </td>
        <td> 0 </td>
        <% end %>
        <td><%= link_to 'Show', [job_order.company_profile, job_order] %></td>
        <td><%= link_to 'Edit', edit_company_profile_job_order_path(job_order.company_profile, job_order) if can? :update, job_order %></td>
        <td><%= link_to 'Destroy', [job_order.company_profile, job_order], method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, job_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
No Job Orders.
<% end %>

<%= link_to 'New Assignment', new_assignment_path, :remote => true, :id => "new_assignment_link" %>
<h2 class="sub-header">All Agencies</h2>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Agency Name</th>
      <th>Agency ID </th>
      <th>Agency Users Count</th>
      <th>Created At</th>
    

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @agency_profiles.each do |agency| %>

      <tr>
        <td><%= link_to agency.name, agency %></td>
        <td><%= agency.id %></td>
        <td><%= agency.users.count %></td>
        <td><%= time_ago_in_words(agency.created_at) %></td>
        
        <td><%= link_to 'Show', agency if can? :update, agency %></td>
      </tr>
  <% end %>
 
  </tbody>
</table>
<% if can? :create, AgencyProfile %>
<%= link_to 'Add New Agency', new_agency_profile_path, class: "btn btn-primary" %>
<% end %>
</div>
